{% comment %}
  Icon Clipboard Snippet
  A clipboard icon for copy to clipboard functionality
  Uses the pink/coral color scheme styling
{% endcomment %}

<svg
  xmlns="http://www.w3.org/2000/svg"
  width="{{ size | default: 24 }}"
  height="{{ size | default: 24 }}"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="{{ stroke_width | default: 2 }}"
  stroke-linecap="round"
  stroke-linejoin="round"
  class="icon icon-clipboard{% if class %} {{ class }}{% endif %}"
  aria-hidden="true"
>
  <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
  <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
</svg>

<style>
  .icon-clipboard {
    color: #e84a7f;
    flex-shrink: 0;
  }

  .icon-clipboard--small {
    width: 16px;
    height: 16px;
  }

  .icon-clipboard--medium {
    width: 24px;
    height: 24px;
  }

  .icon-clipboard--large {
    width: 32px;
    height: 32px;
  }
</style>

{% schema %}
{
  "name": "Icon Clipboard",
  "settings": [
    {
      "type": "header",
      "content": "Icon Clipboard Settings"
    },
    {
      "type": "range",
      "id": "size",
      "min": 12,
      "max": 48,
      "step": 4,
      "default": 24,
      "label": "Icon size"
    },
    {
      "type": "range",
      "id": "stroke_width",
      "min": 1,
      "max": 4,
      "step": 0.5,
      "default": 2,
      "label": "Stroke width"
    }
  ]
}
{% endschema %}
