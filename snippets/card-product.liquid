{% comment %}
  Card Product Snippet
  Uses the pink/coral color scheme: #ff6b9d, #e84a7f, #ff8e53

  Parameters:
  - card_product: The product object (or blank for placeholder)
  - placeholder: Boolean to force placeholder rendering
  - index: Number for placeholder variation
{% endcomment %}

{%- if card_product == blank or placeholder == true -%}
<div class="card-product">
  <div class="card-product__media">
    <div class="card-product__image--placeholder">
      {{ 'product-' | append: index | default: '1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  </div>
  <div class="card-product__info">
    <h3 class="card-product__title">
      <span class="full-unstyled-link">Product {{ index | default: '1' }}</span>
    </h3>
    <div class="card-product__price">
      <span class="price">â‚¹999</span>
    </div>
  </div>
  <div class="card-product__actions">
    <button type="button" class="quick-add-btn__button" disabled>
      {{ 'products.product.add_to_cart' | t }}
    </button>
  </div>
</div>
{%- else -%}

<div class="card-product">
  <div class="card-product__media">
    <a href="{{ card_product.url }}" class="card-product__media-link">
      {%- if card_product.featured_media -%}
        <img
          src="{{ card_product.featured_media | image_url: width: 533 }}"
          srcset="{{ card_product.featured_media | image_url: width: 533 }} 533w,
                  {{ card_product.featured_media | image_url: width: 1066 }} 1066w"
          sizes="(min-width: 1200px) 267px, (min-width: 750px) 267px, calc(100vw - 3rem)"
          alt="{{ card_product.featured_media.alt | escape | default: card_product.title | escape }}"
          loading="lazy"
          width="{{ card_product.featured_media.width }}"
          height="{{ card_product.featured_media.height }}"
          class="card-product__image"
          onerror="this.style.display='none'; this.parentElement.querySelector('.card-product__image--placeholder').style.display='flex';"
        >
        <div class="card-product__image--placeholder" style="display: none;">
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- else -%}
        <div class="card-product__image--placeholder">
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </a>

    <div class="card-product__badges">
      {%- if card_product.available == false -%}
        <span class="badge badge--sold-out">{{ 'products.product.sold_out' | t }}</span>
      {%- elsif card_product.compare_at_price > card_product.price -%}
        <span class="badge badge--sale">{{ 'products.product.on_sale' | t }}</span>
      {%- endif -%}
    </div>

    <!-- Wishlist Button -->
    <button class="card-product__wishlist" aria-label="Add to wishlist">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
      </svg>
    </button>
  </div>

  <div class="card-product__info">
    <h3 class="card-product__title">
      <a href="{{ card_product.url }}" class="full-unstyled-link">
        {{ card_product.title | escape }}
      </a>
    </h3>

    <div class="card-product__price">
      {%- render 'price', product: card_product, use_variant: true -%}
    </div>

    <div class="card-product__variant-picker">
      {%- if card_product.variants.size > 1 -%}
        <span class="card-product__select-options">{{ 'products.product.select_options' | t }}</span>
      {%- endif -%}
    </div>
  </div>

  <div class="card-product__actions">
    <quick-add-btn class="quick-add-btn">
      <button type="button" class="quick-add-btn__button" data-product-url="{{ card_product.url }}">
        {{ 'products.product.add_to_cart' | t }}
      </button>
    </quick-add-btn>
  </div>
</div>

{%- endif -%}

<style>
  .card-product {
    position: relative;
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    border: 2px solid transparent;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .card-product:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(255, 107, 157, 0.2);
    border-color: #ff6b9d;
  }

  .card-product__media {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: #f9f9f9;
  }

  /* Shine effect on hover */
  .card-product::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s ease;
    z-index: 10;
    pointer-events: none;
  }

  .card-product:hover::before {
    left: 100%;
  }

  .card-product__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-product:hover .card-product__image {
    transform: scale(1.1);
  }

  .card-product__image--placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f8f8f8 0%, #f0f0f0 100%);
  }

  .card-product__badges {
    position: absolute;
    top: 12px;
    left: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 2;
  }

  .badge {
    display: inline-block;
    padding: 6px 14px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .badge--sold-out {
    background: #1a1a1a;
    color: #fff;
  }

  .badge--sale {
    background: linear-gradient(135deg, #ff6b9d 0%, #e84a7f 100%);
    color: #fff;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  /* Wishlist button */
  .card-product__wishlist {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #fff;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 3;
  }

  .card-product:hover .card-product__wishlist {
    opacity: 1;
    transform: translateY(0);
  }

  .card-product__wishlist:hover {
    background: #ff6b9d;
    color: #fff;
  }

  .card-product__wishlist svg {
    width: 18px;
    height: 18px;
  }

  .card-product__info {
    padding: 18px;
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .card-product__title {
    font-size: 15px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 6px 0;
    color: #1a1a1a;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-product__title a {
    text-decoration: none;
    color: inherit;
    transition: color 0.2s ease;
  }

  .card-product__title a:hover {
    color: #e84a7f;
  }

  /* Star rating */
  .card-product__rating {
    display: flex;
    align-items: center;
    gap: 4px;
    margin-bottom: 8px;
  }

  .card-product__rating svg {
    width: 14px;
    height: 14px;
    fill: #ff8e53;
  }

  .card-product__rating span {
    font-size: 12px;
    color: #666;
    margin-left: 4px;
  }

  .card-product__price {
    margin-top: auto;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .card-product__price .price {
    color: #e84a7f;
    font-weight: 700;
    font-size: 18px;
  }

  .card-product__price .price--sale {
    color: #e84a7f;
  }

  .card-product__price .price__regular .price-item {
    color: #1a1a1a;
    font-size: 14px;
  }

  .card-product__price .price__sale .price-item--regular {
    color: #999;
    text-decoration: line-through;
    font-size: 14px;
  }

  .card-product__variant-picker {
    margin-top: 8px;
  }

  .card-product__select-options {
    font-size: 12px;
    color: #888;
  }

  .card-product__actions {
    padding: 0 16px 16px;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(255,255,255,0.98) 70%, rgba(255,255,255,0));
    padding-top: 40px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .card-product:hover .card-product__actions {
    opacity: 1;
    transform: translateY(0);
  }

  .quick-add-btn__button {
    width: 100%;
    padding: 14px 16px;
    font-size: 13px;
    font-weight: 700;
    color: #fff;
    background: linear-gradient(135deg, #ff6b9d 0%, #e84a7f 100%);
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .quick-add-btn__button:hover {
    background: linear-gradient(135deg, #ff8e53 0%, #ff6b9d 100%);
    box-shadow: 0 8px 20px rgba(255, 107, 157, 0.4);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .card-product__actions {
      opacity: 1;
      transform: translateY(0);
      position: relative;
      background: none;
      padding-top: 0;
    }

    .card-product__wishlist {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
