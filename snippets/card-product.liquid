{% comment %}
  Card Product Snippet
  Uses the pink/coral color scheme: #ff6b9d, #e84a7f, #ff8e53
{% endcomment %}
<div class="card-product">
  <div class="card-product__media">
    {%- if product.featured_media -%}
      <img srcset="{{ product.featured_media | image_url: width: 533 }} 533w,
                    {{ product.featured_media | image_url: width: 1066 }} 1066w"
            sizes="(min-width: 1200px) 267px, (min-width: 750px) 267px, calc(100vw - 3rem)"
            src="{{ product.featured_media | image_url: width: 533 }}"
            alt="{{ product.featured_media.alt | escape }}"
            loading="lazy"
            width="{{ product.featured_media.width }}"
            height="{{ product.featured_media.height }}"
            class="card-product__image">
    {%- else -%}
      <div class="card-product__image--placeholder">
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}

    <div class="card-product__badges">
      {%- if product.available == false -%}
        <span class="badge badge--sold-out">{{ 'products.product.sold_out' | t }}</span>
      {%- elsif product.compare_at_price > product.price -%}
        <span class="badge badge--sale">{{ 'products.product.on_sale' | t }}</span>
      {%- endif -%}
    </div>
  </div>

  <div class="card-product__info">
    <h3 class="card-product__title">
      <a href="{{ product.url }}" class="full-unstyled-link">
        {{ product.title | escape }}
      </a>
    </h3>

    <div class="card-product__price">
      {%- render 'price', product: product, use_variant: true -%}
    </div>

    <div class="card-product__variant-picker">
      {%- if product.variants.size > 1 -%}
        <span class="card-product__select-options">{{ 'products.product.select_options' | t }}</span>
      {%- endif -%}
    </div>
  </div>

  <div class="card-product__actions">
    <quick-add-btn class="quick-add-btn">
      <button type="button" class="quick-add-btn__button" data-product-url="{{ product.url }}">
        {{ 'products.product.add_to_cart' | t }}
      </button>
    </quick-add-btn>
  </div>
</div>

<style>
  .card-product {
    position: relative;
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    border: 1px solid #f0f0f0;
  }

  .card-product:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(255, 107, 157, 0.15);
    border-color: #ff6b9d;
  }

  .card-product__media {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: #f9f9f9;
  }

  .card-product__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .card-product:hover .card-product__image {
    transform: scale(1.08);
  }

  .card-product__image--placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f8f8f8 0%, #f0f0f0 100%);
  }

  .card-product__badges {
    position: absolute;
    top: 12px;
    left: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 2;
  }

  .badge {
    display: inline-block;
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 20px;
  }

  .badge--sold-out {
    background: #1a1a1a;
    color: #fff;
  }

  .badge--sale {
    background: linear-gradient(135deg, #ff6b9d 0%, #e84a7f 100%);
    color: #fff;
  }

  .card-product__info {
    padding: 16px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-product__title {
    font-size: 16px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 8px 0;
    color: #1a1a1a;
  }

  .card-product__title a {
    text-decoration: none;
    color: inherit;
    transition: color 0.2s ease;
  }

  .card-product__title a:hover {
    color: #e84a7f;
  }

  .card-product__price {
    margin-top: auto;
  }

  .card-product__price .price {
    color: #ff6b9d;
    font-weight: 600;
  }

  .card-product__price .price--sale {
    color: #e84a7f;
  }

  .card-product__price .price__regular .price-item {
    color: #1a1a1a;
  }

  .card-product__price .price__sale .price-item--regular {
    color: #999;
    text-decoration: line-through;
  }

  .card-product__variant-picker {
    margin-top: 8px;
  }

  .card-product__select-options {
    font-size: 13px;
    color: #666;
  }

  .card-product__actions {
    padding: 0 16px 16px;
  }

  .quick-add-btn__button {
    width: 100%;
    padding: 12px 16px;
    font-size: 14px;
    font-weight: 600;
    color: #fff;
    background: linear-gradient(135deg, #ff6b9d 0%, #e84a7f 100%);
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .quick-add-btn__button:hover {
    background: linear-gradient(135deg, #ff8e53 0%, #ff6b9d 100%);
    box-shadow: 0 4px 12px rgba(255, 107, 157, 0.4);
    transform: translateY(-2px);
  }
</style>
