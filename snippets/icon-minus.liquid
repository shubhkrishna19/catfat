{% comment %}
  Icon Minus Snippet
  A minus/remove icon for quantity selectors, accordions, etc.
  Uses the pink/coral color scheme styling
{% endcomment %}

<svg
  xmlns="http://www.w3.org/2000/svg"
  width="{{ size | default: 24 }}"
  height="{{ size | default: 24 }}"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="{{ stroke_width | default: 2 }}"
  stroke-linecap="round"
  stroke-linejoin="round"
  class="icon icon-minus{% if class %} {{ class }}{% endif %}"
  aria-hidden="true"
>
  <line x1="5" y1="12" x2="19" y2="12"></line>
</svg>

<style>
  .icon-minus {
    color: #e84a7f;
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .icon-minus:hover {
    color: #ff6b9d;
    transform: scale(1.1);
  }

  .icon-minus--small {
    width: 16px;
    height: 16px;
  }

  .icon-minus--medium {
    width: 24px;
    height: 24px;
  }

  .icon-minus--large {
    width: 32px;
    height: 32px;
  }

  .icon-minus--circle {
    padding: 8px;
    border-radius: 50%;
    background: rgba(255, 107, 157, 0.1);
    transition: all 0.2s ease;
  }

  .icon-minus--circle:hover {
    background: rgba(255, 107, 157, 0.2);
  }
</style>

{% schema %}
{
  "name": "Icon Minus",
  "settings": [
    {
      "type": "header",
      "content": "Icon Minus Settings"
    },
    {
      "type": "range",
      "id": "size",
      "min": 12,
      "max": 48,
      "step": 4,
      "default": 24,
      "label": "Icon size"
    },
    {
      "type": "range",
      "id": "stroke_width",
      "min": 1,
      "max": 4,
      "step": 0.5,
      "default": 2,
      "label": "Stroke width"
    }
  ]
}
{% endschema %}
