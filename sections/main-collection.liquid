{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

<div class="collection-page page-width">
  {%- if collection.image and section.settings.show_collection_image -%}
    <div class="collection-hero">
      {{ collection.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'collection-hero-image' }}
    </div>
  {%- endif -%}

  <div class="collection-header">
    <h1 class="collection-title">{{ collection.title }}</h1>
    {%- if collection.description and section.settings.show_collection_description -%}
      <div class="collection-description">{{ collection.description }}</div>
    {%- endif -%}
  </div>

  {%- if collection.products.size > 0 -%}
    <div class="collection-grid">
      <div class="grid grid--2-col-tablet-down grid--4-col-desktop">
        {%- for product in collection.products -%}
          <div class="grid-item">
            <a href="{{ product.url }}" class="product-card">
              <div class="product-card-media">
                {%- if product.featured_media -%}
                  {{ product.featured_media | image_url: width: 600 | image_tag: loading: 'lazy', alt: product.title }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="product-card-info">
                <h3 class="product-card-title">{{ product.title }}</h3>
                <div class="product-card-price">
                  {%- render 'price', product: product -%}
                </div>
              </div>
            </a>
          </div>
        {%- endfor -%}
      </div>
    </div>
  {%- else -%}
    <div class="collection-empty">
      <p>No products found in this collection.</p>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": true,
      "label": "Show collection image"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "Show collection description"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.collection-page {
  padding: 40px 0;
}

.collection-header {
  text-align: center;
  margin-bottom: 40px;
}

.collection-title {
  font-size: 3.2rem;
  font-weight: 800;
  color: #e84a7f;
  margin-bottom: 10px;
}

.collection-description {
  font-size: 1.6rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
}

.collection-grid {
  margin-top: 40px;
}

.grid {
  display: grid;
  gap: 30px;
}

.grid--2-col-tablet-down {
  grid-template-columns: repeat(2, 1fr);
}

.grid--4-col-desktop {
  grid-template-columns: repeat(4, 1fr);
}

@media (max-width: 749px) {
  .grid--4-col-desktop {
    grid-template-columns: repeat(2, 1fr);
  }
}

.product-card {
  display: block;
  text-decoration: none;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.15);
}

.product-card-media {
  aspect-ratio: 1;
  overflow: hidden;
  background: #f5f5f5;
}

.product-card-media img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-card-info {
  padding: 15px;
}

.product-card-title {
  font-size: 1.4rem;
  font-weight: 600;
  color: #333;
  margin: 0 0 8px;
}

.product-card-price {
  color: #e84a7f;
  font-weight: 700;
  font-size: 1.3rem;
}

.collection-empty {
  text-align: center;
  padding: 60px 20px;
  font-size: 1.6rem;
  color: #666;
}
{% endstylesheet %}
