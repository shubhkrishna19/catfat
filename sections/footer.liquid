<style>
.footer {
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  color: #fff;
  padding: 60px 0 30px;
}

.footer__content-top {
  padding-bottom: 40px;
}

.footer__blocks-wrapper {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 40px;
}

@media (max-width: 1024px) {
  .footer__blocks-wrapper {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .footer__blocks-wrapper {
    grid-template-columns: 1fr;
  }
}

.footer-block__heading {
  font-size: 1.1rem;
  font-weight: 700;
  color: #ff6b9d;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.footer-block__details-content a {
  color: #ccc;
  text-decoration: none;
  display: block;
  padding: 5px 0;
  transition: color 0.2s ease;
}

.footer-block__details-content a:hover {
  color: #ff6b9d;
}

.footer__content-bottom {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 30px;
  text-align: center;
  color: #888;
  font-size: 0.9rem;
}

.newsletter-form {
  display: flex;
  gap: 10px;
  margin-top: 15px;
}

.newsletter-form .field__input {
  flex: 1;
  padding: 12px 15px;
  border: none;
  border-radius: 25px;
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
}

.newsletter-form .field__input::placeholder {
  color: #aaa;
}

.newsletter-form .field__button {
  padding: 12px 20px;
  background: #ff6b9d;
  color: #fff;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  font-weight: 600;
}
</style>

<footer class="footer">
  <div class="page-width">
    <div class="footer__content-top">
      <div class="footer__blocks-wrapper">
        <div class="footer-block">
          <h4 class="footer-block__heading">Shop</h4>
          <div class="footer-block__details-content">
            <a href="/collections/all">All Products</a>
            <a href="/collections/lunch-box">Lunch Boxes</a>
            <a href="/collections/bottles">Bottles</a>
            <a href="/collections/new-arrivals">New Arrivals</a>
          </div>
        </div>

        <div class="footer-block">
          <h4 class="footer-block__heading">CatFat India</h4>
          <div class="footer-block__details-content">
            <p>Premium lunch boxes and bottles for kids & adults.</p>
          </div>
        </div>

        <div class="footer-block">
          <h4 class="footer-block__heading">Subscribe</h4>
          <div class="footer-block__details-content">
            <p>Get updates on new products and offers.</p>
            <form class="newsletter-form" action="/contact#footer-newsletter" method="post">
              <input type="email" class="field__input" placeholder="Enter your email" aria-label="Email">
              <button type="submit" class="field__button">Subscribe</button>
            </form>
          </div>
        </div>

        <div class="footer-block">
          <h4 class="footer-block__heading">Contact</h4>
          <div class="footer-block__details-content">
            <p>WhatsApp: +91 8383013068</p>
            <p>Email: info@catfat.in</p>
          </div>
        </div>
      </div>
    </div>

    <div class="footer__content-bottom">
      <p>&copy; 2024 CatFat India. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Link list",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Description of your brand</p>"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "primary_color",
      "default": "#ff6b9d",
      "label": "Primary Color"
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
