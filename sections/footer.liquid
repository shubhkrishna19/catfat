<style>
.footer {
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  color: #fff;
  padding: 70px 0 30px;
  position: relative;
  overflow: hidden;
}

/* Decorative elements */
.footer::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -10%;
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, rgba(255, 107, 157, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.footer::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -5%;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, rgba(255, 142, 83, 0.08) 0%, transparent 70%);
  border-radius: 50%;
}

.footer__content-top {
  padding-bottom: 50px;
  position: relative;
  z-index: 1;
}

.footer__blocks-wrapper {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 40px;
}

@media (max-width: 1024px) {
  .footer__blocks-wrapper {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
}

@media (max-width: 768px) {
  .footer__blocks-wrapper {
    grid-template-columns: 1fr;
    text-align: center;
  }
}

.footer-block__heading {
  font-size: 1rem;
  font-weight: 700;
  color: #ff6b9d;
  margin-bottom: 22px;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  position: relative;
  display: inline-block;
}

.footer-block__heading::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 0;
  width: 30px;
  height: 3px;
  background: linear-gradient(90deg, #ff6b9d, #e84a7f);
  border-radius: 2px;
}

@media (max-width: 768px) {
  .footer-block__heading::after {
    left: 50%;
    transform: translateX(-50%);
  }
}

.footer-block__details-content a {
  color: #aaa;
  text-decoration: none;
  display: block;
  padding: 8px 0;
  transition: all 0.3s ease;
  position: relative;
}

.footer-block__details-content a:hover {
  color: #fff;
  padding-left: 8px;
}

.footer-block__details-content a::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 2px;
  background: #ff6b9d;
  transition: width 0.3s ease;
}

.footer-block__details-content a:hover::before {
  width: 4px;
}

/* Newsletter styling */
.footer-block__newsletter {
  margin-top: 15px;
}

.footer-block__newsletter p {
  color: #aaa;
  font-size: 0.9rem;
  margin-bottom: 15px;
  line-height: 1.6;
}

.newsletter-form {
  display: flex;
  gap: 10px;
  margin-top: 15px;
}

.newsletter-form .field__input {
  flex: 1;
  padding: 14px 18px;
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 30px;
  background: rgba(255, 255, 255, 0.05);
  color: #fff;
  font-size: 0.9rem;
  transition: all 0.3s ease;
}

.newsletter-form .field__input:focus {
  outline: none;
  border-color: #ff6b9d;
  background: rgba(255, 255, 255, 0.1);
}

.newsletter-form .field__input::placeholder {
  color: #777;
}

.newsletter-form .field__button {
  padding: 14px 22px;
  background: linear-gradient(135deg, #ff6b9d 0%, #e84a7f 100%);
  color: #fff;
  border: none;
  border-radius: 30px;
  cursor: pointer;
  font-weight: 600;
  font-size: 0.9rem;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.newsletter-form .field__button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(255, 107, 157, 0.4);
}

/* Social icons */
.footer__social {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}

@media (max-width: 768px) {
  .footer__social {
    justify-content: center;
  }
}

.footer__social a {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.footer__social a:hover {
  background: #ff6b9d;
  transform: translateY(-3px);
}

.footer__social svg {
  width: 18px;
  height: 18px;
  fill: #fff;
}

.footer__content-bottom {
  border-top: 1px solid rgba(255, 255, 255, 0.08);
  padding-top: 25px;
  text-align: center;
  color: #666;
  font-size: 0.85rem;
  position: relative;
  z-index: 1;
}

/* Payment icons */
.footer__payment {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 15px;
  flex-wrap: wrap;
}

.footer__payment img {
  height: 24px;
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.footer__payment img:hover {
  opacity: 1;
}
</style>

