<style>
  :root {
    --slideshow-primary-color: {{ section.settings.primary_color }};
    --slideshow-accent-color: {{ section.settings.accent_color }};
    --slideshow-hover-color: {{ section.settings.hover_color }};
  }

  .slideshow {
    position: relative;
    overflow: hidden;
    height: 70vh;
    min-height: 500px;
  }

  @media screen and (min-width: 750px) {
    .slideshow {
      min-height: 600px;
    }
  }

  .slideshow__slider {
    display: flex;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  .slideshow__slide {
    flex: 0 0 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .slideshow__slide.active {
    opacity: 1;
  }

  /* Animation Keyframes */
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .slideshow__slide.active .slideshow__subheading {
    animation: slideInUp 0.6s ease-out forwards;
  }

  .slideshow__slide.active .slideshow__heading {
    animation: slideInUp 0.6s ease-out 0.2s forwards;
    opacity: 0;
  }

  .slideshow__slide.active .slideshow__text {
    animation: slideInUp 0.6s ease-out 0.4s forwards;
    opacity: 0;
  }

  .slideshow__slide.active .slideshow__buttons {
    animation: slideInUp 0.6s ease-out 0.6s forwards;
    opacity: 0;
  }

  /* Slide Background */
  .slideshow__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .slideshow__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .slideshow__media::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  /* Slide Content */
  .slideshow__content-wrapper {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: {{ section.settings.content_max_width }}px;
    padding: 2rem;
    text-align: {{ section.settings.text_alignment }};
  }

  .slideshow__content {
    color: {{ section.settings.text_color }};
  }

  .slideshow__subheading {
    font-size: 1.4rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-bottom: 1.5rem;
    color: #ff8e53;
    background: rgba(255, 255, 255, 0.15);
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    display: inline-block;
  }

  .slideshow__heading {
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #fff;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .slideshow__text {
    font-size: 1.4rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    color: rgba(255, 255, 255, 0.95);
  }

  .slideshow__text p {
    margin: 0;
  }

  /* Buttons */
  .slideshow__button {
    display: inline-block;
    padding: 1.2rem 3rem;
    background: linear-gradient(135deg, #ff6b9d, #e84a7f);
    color: #fff;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 6px 25px rgba(255, 107, 157, 0.5);
  }

  .slideshow__button:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 35px rgba(255, 107, 157, 0.6);
    color: #fff;
    background: linear-gradient(135deg, #e84a7f, #ff6b9d);
  }

  .slideshow__button--secondary {
    background: transparent;
    border: 3px solid #fff;
    box-shadow: none;
    margin-left: 1rem;
  }

  .slideshow__button--secondary:hover {
    background: #fff;
    color: #e84a7f;
  }

  /* Controls */
  .slideshow__controls {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 10;
  }

  .slideshow__button-prev,
  .slideshow__button-next {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    color: #333;
  }

  .slideshow__button-prev:hover,
  .slideshow__button-next:hover {
    background: var(--slideshow-primary-color);
    color: #fff;
  }

  .slideshow__button-prev svg,
  .slideshow__button-next svg {
    width: 20px;
    height: 20px;
  }

  .slideshow__dots {
    display: flex;
    gap: 0.5rem;
  }

  .slideshow__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .slideshow__dot.active {
    background: var(--slideshow-primary-color);
    transform: scale(1.2);
  }

  .slideshow__dot:hover {
    background: var(--slideshow-accent-color);
  }

  /* Progress Bar */
  .slideshow__progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 4px;
    background: var(--slideshow-primary-color);
    transition: width 0.1s linear;
    z-index: 10;
  }

  /* Pause/Play Button */
  .slideshow__autoplay {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 10;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.5);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    transition: all 0.3s ease;
  }

  .slideshow__autoplay:hover {
    background: var(--slideshow-primary-color);
  }

  .slideshow__autoplay svg {
    width: 18px;
    height: 18px;
  }

  /* Mobile Styles */
  @media screen and (max-width: 749px) {
    .slideshow {
      height: {{ section.settings.mobile_height }};
      min-height: 300px;
    }

    .slideshow__content-wrapper {
      padding: 1rem;
    }

    .slideshow__heading {
      font-size: 1.5rem;
    }

    .slideshow__text {
      font-size: 0.95rem;
    }

    .slideshow__button {
      padding: 0.8rem 1.5rem;
      font-size: 0.9rem;
    }

    .slideshow__controls {
      bottom: 1rem;
    }

    .slideshow__button-prev,
    .slideshow__button-next {
      width: 36px;
      height: 36px;
    }
  }
</style>

<div class="slideshow section" id="Slideshow-{{ section.id }}">
  {%- if section.blocks.size > 0 -%}
  <div class="slideshow__slider" data-slider>
    {%- for block in section.blocks -%}
      <div class="slideshow__slide{% if forloop.first %} active{% endif %}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        {%- if block.settings.image != blank -%}
          <div class="slideshow__media">
            {{ block.settings.image | image_url: width: 1920 | image_tag: loading: 'lazy', sizes: '100vw', class: 'slideshow__image' }}
          </div>
        {%- elsif block.settings.mobile_image != blank -%}
          <div class="slideshow__media">
            {{ block.settings.mobile_image | image_url: width: 800 | image_tag: loading: 'lazy', sizes: '100vw', class: 'slideshow__image mobile-only' }}
          </div>
        {%- else -%}
          <div class="slideshow__media" style="background: linear-gradient(135deg, #ff6b9d, #e84a7f);"></div>
        {%- endif -%}

        <div class="slideshow__content-wrapper">
          <div class="slideshow__content">
            {%- if block.settings.subheading != blank -%}
              <p class="slideshow__subheading">{{ block.settings.subheading }}</p>
            {%- endif -%}
            {%- if block.settings.heading != blank -%}
              <h2 class="slideshow__heading">{{ block.settings.heading }}</h2>
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              <div class="slideshow__text">
                {{ block.settings.text }}
              </div>
            {%- endif -%}
            {%- if block.settings.button_label != blank -%}
              <a href="{{ block.settings.button_link }}" class="slideshow__button{% if block.settings.button_style == 'secondary' %} slideshow__button--secondary{% endif %}">
                {{ block.settings.button_label }}
              </a>
            {%- endif -%}
            {%- if block.settings.button_label_2 != blank -%}
              <a href="{{ block.settings.button_link_2 }}" class="slideshow__button{% if block.settings.button_style_2 == 'secondary' %} slideshow__button--secondary{% endif %}" style="margin-left: 1rem;">
                {{ block.settings.button_label_2 }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <div class="slideshow__controls">
      <button class="slideshow__button-prev" aria-label="Previous">
        {% render 'icon-arrow', direction: 'left' %}
      </button>
      <div class="slideshow__dots" data-dots></div>
      <button class="slideshow__button-next" aria-label="Next">
        {% render 'icon-arrow', direction: 'right' %}
      </button>
    </div>

    <button class="slideshow__autoplay" aria-label="Pause/Play" id="autoplay-toggle">
      {% render 'icon-pause' %}
    </button>

    <div class="slideshow__progress" id="slideshow-progress"></div>
  {%- endif -%}
  {%- else -%}
  <div class="slideshow__slider" data-slider>
    <div class="slideshow__slide active">
      <div class="slideshow__media" style="background: linear-gradient(135deg, #ff6b9d, #e84a7f);"></div>
      <div class="slideshow__content-wrapper">
        <div class="slideshow__content">
          <p class="slideshow__subheading">Welcome to</p>
          <h2 class="slideshow__heading">CatFat India</h2>
          <div class="slideshow__text">
            <p>Premium lunch boxes and bottles for kids & adults</p>
          </div>
          <a href="{{ routes.all_products_collection_url }}" class="slideshow__button">Shop Now</a>
        </div>
      </div>
    </div>
  </div>
  {%- endif -%}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.querySelector('.slideshow__slider');
    if (!slider) return;

    const slides = slider.querySelectorAll('.slideshow__slide');
    const dotsContainer = slider.parentElement.querySelector('.slideshow__dots');
    const prevBtn = slider.parentElement.querySelector('.slideshow__button-prev');
    const nextBtn = slider.parentElement.querySelector('.slideshow__button-next');
    const autoplayBtn = slider.parentElement.querySelector('.slideshow__autoplay');
    const progress = slider.parentElement.querySelector('.slideshow__progress');

    let currentSlide = 0;
    let isPlaying = {{ section.settings.auto_rotate }};
    let slideInterval;
    let progressInterval;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });

      if (dotsContainer) {
        const dots = dotsContainer.querySelectorAll('.slideshow__dot');
        dots.forEach((dot, i) => {
          dot.classList.toggle('active', i === index);
        });
      }

      currentSlide = index;
      resetProgress();
    }

    function nextSlide() {
      showSlide((currentSlide + 1) % slides.length);
    }

    function prevSlide() {
      showSlide((currentSlide - 1 + slides.length) % slides.length);
    }

    function startAutoplay() {
      if (slides.length > 1) {
        slideInterval = setInterval(nextSlide, {{ section.settings.change_slides_speed | times: 1000 }});
        progressInterval = setInterval(updateProgress, 100);
      }
    }

    function stopAutoplay() {
      clearInterval(slideInterval);
      clearInterval(progressInterval);
    }

    function toggleAutoplay() {
      isPlaying = !isPlaying;
      if (isPlaying) {
        startAutoplay();
        autoplayBtn.innerHTML = '{% render "icon-pause" %}';
      } else {
        stopAutoplay();
        autoplayBtn.innerHTML = '{% render "icon-play" %}';
      }
    }

    function resetProgress() {
      if (progress) {
        progress.style.width = '0%';
      }
    }

    function updateProgress() {
      if (progress && isPlaying) {
        const progressPercent = ((Date.now() % ({{ section.settings.change_slides_speed | times: 1000 }})) / {{ section.settings.change_slides_speed | times: 1000 }}) * 100;
        progress.style.width = progressPercent + '%';
      }
    }

    // Create dots
    if (dotsContainer) {
      slides.forEach((_, i) => {
        const dot = document.createElement('button');
        dot.classList.add('slideshow__dot');
        if (i === 0) dot.classList.add('active');
        dot.setAttribute('aria-label', 'Go to slide ' + (i + 1));
        dot.addEventListener('click', function() {
          showSlide(i);
          if (isPlaying) {
            stopAutoplay();
            startAutoplay();
          }
        });
        dotsContainer.appendChild(dot);
      });
    }

    // Event listeners
    prevBtn?.addEventListener('click', function() {
      prevSlide();
      if (isPlaying) {
        stopAutoplay();
        startAutoplay();
      }
    });

    nextBtn?.addEventListener('click', function() {
      nextSlide();
      if (isPlaying) {
        stopAutoplay();
        startAutoplay();
      }
    });

    autoplayBtn?.addEventListener('click', toggleAutoplay);

    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowLeft') prevSlide();
      if (e.key === 'ArrowRight') nextSlide();
    });

    // Start autoplay
    if (isPlaying && slides.length > 1) {
      startAutoplay();
    }

    // Show first slide
    showSlide(0);
  });
</script>

