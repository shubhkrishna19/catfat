{{ 'section-featured-collection.css' | asset_url | stylesheet_tag }}

<style>
.featured-collection {
  padding: 60px 0;
  background: #fff;
}

.featured-collection .title-wrapper {
  text-align: center;
  margin-bottom: 40px;
}

.featured-collection .title {
  font-size: 2.5rem;
  font-weight: 800;
  color: #e84a7f;
  margin: 0;
}

.featured-collection .title::after {
  content: '';
  display: block;
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, #ff6b9d, #e84a7f);
  margin: 15px auto 0;
  border-radius: 2px;
}

.featured-collection .grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 25px;
}

@media (max-width: 1024px) {
  .featured-collection .grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .featured-collection .grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
  }

  .featured-collection .title {
    font-size: 1.8rem;
  }
}

.featured-collection .card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.featured-collection .card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(255, 107, 157, 0.2);
}

.featured-collection .card__media {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
  background: #f5f5f5;
}

.featured-collection .card__media img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.featured-collection .card__content {
  padding: 15px;
}

.featured-collection .card__title {
  font-size: 1rem;
  font-weight: 600;
  margin: 0 0 8px;
  color: #333;
}

.featured-collection .card__title a {
  color: #333;
  text-decoration: none;
}

.featured-collection .price {
  font-size: 1.1rem;
  font-weight: 700;
  color: #e84a7f;
}

.featured-collection__view-all {
  text-align: center;
  margin-top: 40px;
}

.featured-collection__view-all .button {
  display: inline-block;
  padding: 12px 30px;
  background: linear-gradient(135deg, #ff6b9d, #e84a7f);
  color: #fff;
  text-decoration: none;
  border-radius: 30px;
  font-weight: 600;
}
</style>

<div class="featured-collection section">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper">
        <h2 class="title">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    <ul class="grid" role="list">
      {%- if section.settings.collection == blank -%}
        {%- for i in (1..section.settings.products_to_show) -%}
          <li class="grid__item">
            <div class="card">
              <div class="card__media">
                {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="card__content">
                <h3 class="card__title">Product {{ forloop.index }}</h3>
                <div class="price">₹999</div>
              </div>
            </div>
          </li>
        {%- endfor -%}
      {%- else -%}
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <li class="grid__item">
            <div class="card">
              <a href="{{ product.url }}" class="card__media">
                {%- if product.featured_media != blank -%}
                  {{ product.featured_media | image_url: width: 400 | image_tag: loading: 'lazy' }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </a>
              <div class="card__content">
                <h3 class="card__title">
                  <a href="{{ product.url }}">{{ product.title | escape }}</a>
                </h3>
                <div class="price">
                  {%- if product.price != blank -%}
                    {{ product.price | money }}
                  {%- else -%}
                    ₹999
                  {%- endif -%}
                </div>
              </div>
            </div>
          </li>
        {%- endfor -%}
      {%- endif -%}
    </ul>

    {%- if section.settings.show_view_all and section.settings.collection != blank -%}
      <div class="featured-collection__view-all">
        <a href="{{ section.settings.collection.url }}" class="button">View All Products</a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Featured collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured Products",
      "label": "Heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 8,
      "label": "Maximum products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View All' button"
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
