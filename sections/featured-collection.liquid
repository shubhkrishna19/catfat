{{ 'section-featured-collection.css' | asset_url | stylesheet_tag }}

<style>
  :root {
    --fc-primary-color: {{ section.settings.primary_color }};
    --fc-accent-color: {{ section.settings.accent_color }};
    --fc-hover-color: {{ section.settings.hover_color }};
  }

  .featured-collection {
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 0;
  }

  @media screen and (min-width: 750px) {
    .featured-collection {
      padding: {{ section.settings.padding_top }}px 0;
    }
  }

  .featured-collection .title-wrapper {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.heading_margin | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .featured-collection .title-wrapper {
      margin-bottom: {{ section.settings.heading_margin }}px;
    }
  }

  .featured-collection .title {
    color: var(--fc-accent-color);
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
  }

  .featured-collection .title::after {
    content: '';
    display: block;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--fc-primary-color), var(--fc-accent-color));
    margin-top: 1rem;
  }

  .featured-collection .title-wrapper--no-margin .title::after {
    margin-top: 0;
  }

  .featured-collection__description {
    text-align: {{ section.settings.heading_alignment }};
    margin-top: 1rem;
    font-size: 1.1rem;
    color: #666;
  }

  /* Product Card Styles */
  .featured-collection .card-wrapper {
    height: 100%;
  }

  .featured-collection .card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .featured-collection .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(255, 107, 157, 0.2);
  }

  .featured-collection .card__media {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
  }

  .featured-collection .card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .featured-collection .card:hover .card__media img {
    transform: scale(1.08);
  }

  /* Sale Badge */
  .featured-collection .card__badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: var(--fc-primary-color);
    color: #fff;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .featured-collection .card__badge--soldout {
    background: #999;
  }

  /* Quick View Button */
  .featured-collection .card__quick-view {
    position: absolute;
    bottom: -50px;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    color: var(--fc-accent-color);
    border: none;
    padding: 0.7rem 1.2rem;
    border-radius: 25px;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    opacity: 0;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
  }

  .featured-collection .card:hover .card__quick-view {
    bottom: 12px;
    opacity: 1;
  }

  .featured-collection .card__quick-view:hover {
    background: var(--fc-primary-color);
    color: #fff;
  }

  /* Card Content */
  .featured-collection .card__content {
    padding: 1.2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .featured-collection .card__title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    line-height: 1.4;
  }

  .featured-collection .card__title a {
    color: #333;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .featured-collection .card__title a:hover {
    color: var(--fc-primary-color);
  }

  /* Price */
  .featured-collection .price {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: auto;
  }

  .featured-collection .price .price__regular {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--fc-accent-color);
  }

  .featured-collection .price .price__sale {
    color: var(--fc-primary-color);
  }

  .featured-collection .price .price__compare {
    font-size: 0.9rem;
    color: #999;
    text-decoration: line-through;
  }

  /* Rating */
  .featured-collection .card__rating {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    margin-bottom: 0.5rem;
  }

  .featured-collection .card__rating svg {
    width: 14px;
    height: 14px;
    fill: #ffc107;
  }

  .featured-collection .card__rating span {
    font-size: 0.8rem;
    color: #666;
  }

  /* View All Button */
  .featured-collection__view-all {
    text-align: center;
    margin-top: 3rem;
  }

  .featured-collection__view-all .button {
    background: linear-gradient(135deg, var(--fc-primary-color), var(--fc-accent-color));
    color: #fff;
    border: none;
    padding: 1rem 2.5rem;
    border-radius: 30px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 107, 157, 0.3);
  }

  .featured-collection__view-all .button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 107, 157, 0.4);
  }

  /* Responsive */
  @media screen and (max-width: 749px) {
    .featured-collection .title {
      font-size: 1.5rem;
    }

    .featured-collection .grid {
      gap: 1rem;
    }
  }
</style>

<div class="featured-collection section">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper title-wrapper--{{ section.settings.heading_alignment }}{% if section.settings.heading_margin == 0 %} title-wrapper--no-margin{% endif %}">
        <h2 class="title">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="featured-collection__description">
        {{ section.settings.description }}
      </div>
    {%- endif -%}

    <ul class="grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--2-col-tab-down" role="list">
      {%- if section.settings.collection == blank -%}
        {%- for i in (1..section.settings.products_to_show) -%}
          <li class="grid__item">
            <div class="card-wrapper">
              <div class="card">
                <div class="card__media">
                  {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
                <div class="card__content">
                  <h3 class="card__title">
                    <a href="#">Product {{ forloop.index }}</a>
                  </h3>
                  <div class="price">
                    <span class="price__regular">₹999</span>
                  </div>
                </div>
              </div>
            </div>
          </li>
        {%- endfor -%}
      {%- else -%}
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <li class="grid__item">
            <div class="card-wrapper">
              <div class="card">
                <a href="{{ product.url }}" class="card__media">
                  {%- if product.featured_media != blank -%}
                    {{ product.featured_media | image_url: width: 600 | image_tag: loading: 'lazy', class: 'motion-reduce', sizes: '(min-width: 1200px) 267px, (min-width: 750px) 267px, calc(100vw - 3rem)' }}
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}

                  {%- if product.compare_at_price > product.price -%}
                    <span class="card__badge">Sale</span>
                  {%- endif -%}

                  {%- unless product.available -%}
                    <span class="card__badge card__badge--soldout">Sold Out</span>
                  {%- endunless -%}

                  <button class="card__quick-view" onclick="location.href='{{ product.url }}'">Quick View</button>
                </a>
                <div class="card__content">
                  {%- if section.settings.show_rating and product.metafields.reviews.rating.value != blank -%}
                    <div class="card__rating">
                      {% render 'icon-star' %}
                      <span>{{ product.metafields.reviews.rating.value | round: 1 }} ({{ product.metafields.reviews.rating_count }})</span>
                    </div>
                  {%- endif -%}

                  <h3 class="card__title">
                    <a href="{{ product.url }}">{{ product.title | escape }}</a>
                  </h3>

                  <div class="price">
                    {%- if product.price != blank -%}
                      <span class="price__regular">
                        {{ product.price | money }}
                      </span>
                      {%- if product.compare_at_price > product.price -%}
                        <span class="price__compare">
                          {{ product.compare_at_price | money }}
                        </span>
                      {%- endif -%}
                    {%- else -%}
                      <span class="price__regular">₹999</span>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </div>
          </li>
        {%- endfor -%}
      {%- endif -%}
    </ul>

    {%- if section.settings.show_view_all and section.settings.collection != blank -%}
      <div class="featured-collection__view-all">
        <a href="{{ section.settings.collection.url }}" class="button">View All Products</a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Featured collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Featured collection",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "default": "center",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "range",
      "id": "heading_margin",
      "min": 0,
      "max": 60,
      "step": 5,
      "default": 30,
      "label": "Heading margin bottom"
    },
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Maximum products to show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Number of columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View All' button"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show product ratings"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "primary_color",
      "default": "#ff6b9d",
      "label": "Primary Color (Pink)"
    },
    {
      "type": "color",
      "id": "accent_color",
      "default": "#e84a7f",
      "label": "Accent Color (Deep Pink)"
    },
    {
      "type": "color",
      "id": "hover_color",
      "default": "#ff8e53",
      "label": "Hover Color (Coral)"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding top"
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
