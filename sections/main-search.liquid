<style>
.search-page {
  padding: 40px 0;
}

.search-page h1 {
  font-size: 2rem;
  font-weight: 700;
  color: #333;
  margin-bottom: 30px;
}

.search-form {
  max-width: 600px;
  margin: 0 auto 40px;
}

.search-form form {
  display: flex;
  gap: 10px;
}

.search-form input {
  flex: 1;
  padding: 15px 20px;
  border: 2px solid #ddd;
  border-radius: 30px;
  font-size: 1rem;
}

.search-form input:focus {
  outline: none;
  border-color: #ff6b9d;
}

.search-form button {
  padding: 15px 30px;
  background: linear-gradient(135deg, #ff6b9d, #e84a7f);
  color: #fff;
  border: none;
  border-radius: 30px;
  font-weight: 600;
  cursor: pointer;
}

.search-results-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 25px;
}

@media (max-width: 1024px) {
  .search-results-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .search-results-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.search-no-results {
  text-align: center;
  padding: 60px 20px;
  background: #f9f9f9;
  border-radius: 12px;
}

.search-no-results h2 {
  font-size: 1.5rem;
  color: #333;
  margin-bottom: 10px;
}

.search-no-results p {
  color: #666;
}
</style>

<div class="search-page page-width">
  <h1>Search</h1>

  <div class="search-form">
    <form action="{{ routes.search_url }}" method="get">
      <input type="search" name="q" placeholder="Search for products..." value="{{ search.terms }}">
      <button type="submit">Search</button>
    </form>
  </div>

  {%- if search.performed -%}
    {%- if search.results_count == 0 -%}
      <div class="search-no-results">
        <h2>No results found for "{{ search.terms }}"</h2>
        <p>Try adjusting your search or browse our collections.</p>
      </div>
    {%- else -%}
      <p>{{ search.results_count }} results found for "{{ search.terms }}"</p>
      <div class="search-results-grid">
        {%- for item in search.results -%}
          {%- if item.object_type == 'product' -%}
            {% render 'card-product', card_product: item %}
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Search",
  "settings": []
}
{% endschema %}
