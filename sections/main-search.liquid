<style>
.search-page {
  padding: 40px 0;
}

.search-page h1 {
  font-size: 2rem;
  font-weight: 700;
  color: #333;
  margin-bottom: 30px;
}

.search-form {
  max-width: 600px;
  margin: 0 auto 40px;
}

.search-form form {
  display: flex;
  gap: 10px;
}

.search-form input {
  flex: 1;
  padding: 15px 20px;
  border: 2px solid #ddd;
  border-radius: 30px;
  font-size: 1rem;
}

.search-form input:focus {
  outline: none;
  border-color: #ff6b9d;
}

.search-form button {
  padding: 15px 30px;
  background: linear-gradient(135deg, #ff6b9d, #e84a7f);
  color: #fff;
  border: none;
  border-radius: 30px;
  font-weight: 600;
  cursor: pointer;
}

.search-results-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 25px;
}

@media (max-width: 1024px) {
  .search-results-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .search-results-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.search-product-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.search-product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(255, 107, 157, 0.2);
}

.search-product-card-media {
  aspect-ratio: 1;
  overflow: hidden;
  background: #f5f5f5;
}

.search-product-card-media img,
.search-product-card-media .placeholder-svg {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.search-product-card-media .placeholder-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.search-product-card-media .placeholder-wrapper .placeholder-svg {
  width: 80%;
  height: 80%;
}

.search-product-card-info {
  padding: 15px;
}

.search-product-card-title {
  font-size: 1rem;
  font-weight: 600;
  margin: 0 0 8px;
}

.search-product-card-title a {
  color: #333;
  text-decoration: none;
}

.search-product-card-title a:hover {
  color: #ff6b9d;
}

.search-product-card-price {
  color: #e84a7f;
  font-weight: 700;
}

.search-no-results {
  text-align: center;
  padding: 60px 20px;
  background: #f9f9f9;
  border-radius: 12px;
}

.search-no-results h2 {
  font-size: 1.5rem;
  color: #333;
  margin-bottom: 10px;
}

.search-no-results p {
  color: #666;
}
</style>

<div class="search-page page-width">
  <h1>Search</h1>

  <div class="search-form">
    <form action="{{ routes.search_url }}" method="get">
      <input type="search" name="q" placeholder="Search for products..." value="{{ search.terms }}">
      <button type="submit">Search</button>
    </form>
  </div>

  {%- if search.performed -%}
    {%- if search.results_count == 0 -%}
      <div class="search-no-results">
        <h2>No results found for "{{ search.terms }}"</h2>
        <p>Try adjusting your search or browse our collections.</p>
      </div>
    {%- else -%}
      <p>{{ search.results_count }} results found for "{{ search.terms }}"</p>
      <div class="search-results-grid">
        {%- for item in search.results -%}
          {%- if item.object_type == 'product' -%}
            <div class="search-product-card">
              <a href="{{ item.url }}" class="search-product-card-media">
                {%- if item.featured_media != blank -%}
                  <img
                    src="{{ item.featured_media | image_url: width: 400 }}"
                    alt="{{ item.title | escape }}"
                    class="search-product-img"
                    loading="lazy"
                    width="400"
                    height="400"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  >
                  <div class="placeholder-wrapper" style="display: none;">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </a>
              <div class="search-product-card-info">
                <h3 class="search-product-card-title">
                  <a href="{{ item.url }}">{{ item.title }}</a>
                </h3>
                <div class="search-product-card-price">
                  {%- if item.price -%}
                    {{ item.price | money }}
                  {%- else -%}
                    â‚¹999
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Search",
  "settings": []
}
{% endschema %}
