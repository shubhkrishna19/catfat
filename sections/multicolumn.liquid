<div class="multicolumn section">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <h2 class="title">{{ section.settings.title }}</h2>
    {%- endif -%}
    <ul class="grid grid--{{ section.settings.columns_desktop }}-col-desktop" role="list">
      {%- for i in (1..section.settings.columns_desktop) -%}
        {%- assign column_index = forloop.index -%}
        {%- assign title_key = 'column_' | append: column_index | append: '_title' -%}
        {%- assign text_key = 'column_' | append: column_index | append: '_text' -%}
        <li class="grid__item">
          <div class="multicolumn__item">
            {%- if section.settings[title_key] != blank -%}
              <h3 class="multicolumn__title">{{ section.settings[title_key] }}</h3>
            {%- endif -%}
            {%- if section.settings[text_key] != blank -%}
              <div class="multicolumn__text">{{ section.settings[text_key] }}</div>
            {%- endif -%}
          </div>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>

