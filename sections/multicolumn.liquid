<style>
.multicolumn {
  padding: 60px 0;
  background: #fff;
}

.multicolumn .title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 800;
  color: #e84a7f;
  margin: 0 0 40px;
}

.multicolumn .title::after {
  content: '';
  display: block;
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, #ff6b9d, #e84a7f);
  margin: 15px auto 0;
  border-radius: 2px;
}

.multicolumn .grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 25px;
}

@media (max-width: 1024px) {
  .multicolumn .grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .multicolumn .grid {
    grid-template-columns: 1fr;
  }

  .multicolumn .title {
    font-size: 1.8rem;
  }
}

.multicolumn__item {
  text-align: center;
  padding: 30px 20px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.multicolumn__item:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(255, 107, 157, 0.2);
}

.multicolumn__title {
  font-size: 1.2rem;
  font-weight: 700;
  color: #333;
  margin: 0 0 10px;
}

.multicolumn__text {
  font-size: 0.95rem;
  color: #666;
  line-height: 1.5;
}
</style>

<div class="multicolumn section">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <h2 class="title">{{ section.settings.title }}</h2>
    {%- endif -%}

    <div class="grid">
      {%- for i in (1..section.settings.columns_desktop) -%}
        {%- assign title_key = 'column_' | append: i | append: '_title' -%}
        {%- assign text_key = 'column_' | append: i | append: '_text' -%}
        <div class="multicolumn__item">
          {%- if section.settings[title_key] != blank -%}
            <h3 class="multicolumn__title">{{ section.settings[title_key] }}</h3>
          {%- endif -%}
          {%- if section.settings[text_key] != blank -%}
            <div class="multicolumn__text">{{ section.settings[text_key] }}</div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

