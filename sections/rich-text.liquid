<style>
.rich-text {
  padding: 60px 0;
  background: #f9f9f9;
  text-align: center;
}

.rich-text__heading {
  font-size: 2.5rem;
  font-weight: 800;
  color: #e84a7f;
  margin: 0 0 15px;
}

.rich-text__heading::after {
  content: '';
  display: block;
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, #ff6b9d, #e84a7f);
  margin: 15px auto 0;
  border-radius: 2px;
}

.rich-text__text {
  font-size: 1.1rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.rich-text .button {
  display: inline-block;
  margin-top: 25px;
  padding: 12px 30px;
  background: linear-gradient(135deg, #ff6b9d, #e84a7f);
  color: #fff;
  text-decoration: none;
  border-radius: 30px;
  font-weight: 600;
}

@media (max-width: 768px) {
  .rich-text__heading {
    font-size: 1.8rem;
  }

  .rich-text__text {
    font-size: 1rem;
  }
}
</style>

<div class="rich-text section">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="rich-text__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <div class="rich-text__text">{{ section.settings.text }}</div>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_label }}</a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Rich text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Rich text"
    }
  ]
}
{% endschema %}
