<style>
  .rich-text {
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 0;
    text-align: {{ section.settings.text_alignment }};
    background: #f9f9f9;
  }

  @media screen and (min-width: 750px) {
    .rich-text {
      padding: {{ section.settings.padding_top }}px 0;
    }
  }

  .rich-text__heading {
    font-size: 3rem;
    font-weight: 800;
    color: #e84a7f;
    margin: 0 0 1.5rem;
    line-height: 1.2;
    position: relative;
  }

  .rich-text__heading::after {
    content: '';
    display: block;
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, #ff6b9d, #e84a7f);
    margin: 1rem auto 0;
    border-radius: 2px;
  }

  .rich-text--left .rich-text__heading::after,
  .rich-text--right .rich-text__heading::after {
    margin-left: 0;
    margin-right: auto;
  }

  .rich-text--right .rich-text__heading::after {
    margin-left: auto;
    margin-right: 0;
  }

  .rich-text__text {
    font-size: 1.2rem;
    color: #666;
    line-height: 1.8;
    max-width: 700px;
    margin: 0 auto;
  }

  .rich-text__text p {
    margin: 0;
  }

  .rich-text .button {
    display: inline-block;
    margin-top: 2rem;
    padding: 1.2rem 3rem;
    background: linear-gradient(135deg, #ff6b9d, #e84a7f);
    color: #fff;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(255, 107, 157, 0.4);
  }

  .rich-text .button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(255, 107, 157, 0.5);
  }

  .rich-text__blocks {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .rich-text--center .rich-text__blocks {
    align-items: center;
  }

  .rich-text--left .rich-text__blocks {
    align-items: flex-start;
  }

  .rich-text--right .rich-text__blocks {
    align-items: flex-end;
  }

  @media screen and (max-width: 749px) {
    .rich-text__heading {
      font-size: 2rem;
    }

    .rich-text__text {
      font-size: 1rem;
    }

    .rich-text .button {
      padding: 1rem 2rem;
      font-size: 0.9rem;
    }
  }
</style>

<div class="rich-text section rich-text--{{ section.settings.text_alignment }}">
  <div class="page-width">
    <div class="rich-text__blocks">
      {%- if section.settings.heading != blank -%}
        <h2 class="rich-text__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="rich-text__text rte">{{ section.settings.text }}</div>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_label }}</a>
      {%- endif -%}

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="rich-text__heading" {{ block.shopify_attributes }}>{{ block.settings.heading }}</h2>
          {%- when 'text' -%}
            <div class="rich-text__text rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {%- when 'button' -%}
            <a href="{{ block.settings.button_link }}" class="button" {{ block.shopify_attributes }}>{{ block.settings.button_label }}</a>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

