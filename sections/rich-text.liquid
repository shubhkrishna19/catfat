    {
      "type": "color",
      "id": "heading_color",
      "default": "#e84a7f",
      "label": "Heading color"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#666666",
      "label": "Text color"
    },
    {
      "type": "color",
      "id": "primary_color",
      "default": "#ff6b9d",
